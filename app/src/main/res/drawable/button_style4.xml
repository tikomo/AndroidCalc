<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていない状態 -->
    <item android:state_pressed="false">
        <!-- shape:oval(=円形) -->
        <shape android:shape="oval">
            <!-- サイズを指定 -->
            <size
                android:width="80dip"
                android:height="80dip"/>

            <!-- グラデーション -->
            <!-- angle:角度、type:linear(=線形) -->
            <gradient
                android:angle="90"
                android:endColor="#21ffd3"
                android:startColor="#1abc9c"
                android:type="linear" />

        </shape>
    </item>

    <!-- ボタンが押された状態 -->
    <item android:state_pressed="true">
        <!-- shape:oval(=円形) -->
        <shape android:shape="oval">
            <!-- サイズを指定 -->
            <size
                android:width="80dip"
                android:height="80dip"/>

            <!-- グラデーション -->
            <!-- angle:角度、type:linear(=線形) -->
            <gradient
                android:angle="90"
                android:endColor="#cfd8dc"
                android:startColor="#37474f"
                android:type="linear" />
        </shape>
    </item>

</selector>